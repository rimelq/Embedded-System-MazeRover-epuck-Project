{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP launch to main",
            "cwd": "${workspaceRoot}/src",
            "executable": "${workspaceRoot}/src/build/CamReg.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "runToEntryPoint": "main",
            "device": "STM32F407",
            "BMPGDBSerialPort" : "${config:com_port}",
            "svdFile": "${config:epuck2_utils}/STM32F407.svd",
            "preLaunchCommands":[
                "set mem inaccessible-by-default off",
            ]
        },
        {
            "name": "BMP launch to reset (PC=0)",
            "cwd": "${workspaceRoot}/src",
            "executable": "${workspaceRoot}/src/build/CamReg.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "breakAfterReset": true,
            "device": "STM32F407",
            "BMPGDBSerialPort" : "${config:com_port}",
            "svdFile": "${config:epuck2_utils}//STM32F407.svd",
            "preLaunchCommands":[
                "set mem inaccessible-by-default off",
            ]
        },
        {
            "name": "BMP attach",
            "cwd": "${workspaceRoot}/src",
            "executable": "${workspaceRoot}/src/build/CamReg.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32F407",
            "BMPGDBSerialPort" : "${config:com_port}",
            "svdFile": "${config:epuck2_utils}//STM32F407.svd",
            "preAttachCommands":[
                "set async-remote false",
                "set remote-timeout 20"
            ],
            "preRestartCommands": [
                "enable breakpoint",
                "break main"
            ]
        }
    ]
}